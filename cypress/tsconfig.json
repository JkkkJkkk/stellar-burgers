{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],
    "strict": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["../src/*"],
      "@fixtures/*": ["./cypress/fixtures/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.json"]
}